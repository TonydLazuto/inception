# Example mysql config file.

[client-server]
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqld]
# Directory where you want to put your data
user = mysql
datadir = /var/lib/mysql
port = 3306
socket = /var/run/mysqld/mysqld.sock
log_error = /var/log/mysql/mysql_error.log
bind-address = $DOMAIN_NAME

[mysqld_safe]
# datadir = /var/lib/mysql
# port = 3306
socket = /var/run/mysqld/mysqld.sock
# bind-address = $DOMAIN_NAME

